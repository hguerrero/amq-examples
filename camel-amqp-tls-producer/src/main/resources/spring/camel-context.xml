<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:camel="http://camel.apache.org/schema/spring"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
	<!-- SSL Connection Factory -->
    <bean id="counter" class="java.util.concurrent.atomic.AtomicLong" />
    <!-- Define a traditional camel context here -->
    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <route id="producer-route">
            <from id="route-timer" uri="timer://foo?period={{timer.period}}&amp;repeatCount={{timer.repeat-count}}"/>
            <setBody id="route-setBody">
                <simple>Message sent ${bean:counter.incrementAndGet}</simple>
            </setBody>
            <toD id="_amqp1" uri="{{route.to}}"/>
        </route>    
    </camelContext>
</beans>
